var

(* Clocks *)
 	x
		: clock;

(* Parameters *)
	v, u
		: parameter;



(************************************************************)
  automaton pta
(************************************************************)
synclabs: a, b; 

loc l7: invariant True


loc l5: invariant x <= v
	when True sync a goto l4;

loc l4: invariant x <= u
	when True sync b goto l5;

end (* pta *)



(************************************************************)
(* Initial state *)
(************************************************************)

init := {
  discrete =
  	(*------------------------------------------------------------*)
  	(* Initial location *)
  	(*------------------------------------------------------------*)
  	loc[pta] := l7,
  ;

  continuous =
  	(*------------------------------------------------------------*)
  	(* Initial clock constraints *)
  	(*------------------------------------------------------------*)
  	& x = 0

  	(*------------------------------------------------------------*)
  	(* Parameter constraints *)
  	(*------------------------------------------------------------*)
  	& v >= 0
  	& u >= 0
  ;
}

(************************************************************)
(* The end *)
(************************************************************)
end
